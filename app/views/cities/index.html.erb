<p id="notice"><%= notice %></p>

<h1><%= t('cities') %></h1>
<hr>
<table id="citytable">
  <thead>
       <th> Afficher une ville </th>
        <th> Modifier une ville </th>
        <th> Supprimer une ville </th>
  </thead>

  <tbody>
      
 

      
    <% @cities.each do |city| %>
    
      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= link_to t('edit'), edit_city_path(city) %></td>
        <td><%= link_to t('destroy'), city, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('showallcities'),cities_showall_path %>
<br>

<%= link_to t('new_city'), new_city_path %>
