<h1>Editing City</h1>


<%= form_for @city, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <%= label_tag(:name, t('name')) %>
  <%= f.text_field :name %>
  <%= label_tag(:country, t('country')) %>
  <%= f.text_field :country %>
  <%= label_tag(:population, t('population')) %>
  <%= f.text_field :population %>
  <%= f.submit "update" %>
<% end %>



<%= link_to t('show'), @city %> |
<%= link_to t('back'), cities_path %>
