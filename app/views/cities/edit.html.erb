<h1>Editing City</h1>


<%= form_for @city, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <%= label_tag(:name, "Name") %>
  <%= f.text_field :name %>
  <%= label_tag(:country, "Country") %>
  <%= f.text_field :country %>
  <%= label_tag(:population, "Population") %>
  <%= f.text_field :population %>
  <%= f.submit "Update" %>
<% end %>



<%= link_to t('show'), @city %> |
<%= link_to t('back'), cities_path %>
