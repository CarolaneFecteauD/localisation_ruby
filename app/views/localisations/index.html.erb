<p id="notice"><%= notice %></p>

<h1><%= t "index.title" %></h1>

<%= t "index.language_button" %>
<%= link_to_unless_current "English", locale: "en" %>
<%= link_to_unless_current "Francais", locale: "fr" %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @localisations.each do |localisation| %>
      <tr>
        <td><%= link_to 'Show', localisation %></td>
        <td><%= link_to 'Edit', edit_localisation_path(localisation) %></td>
        <td><%= link_to 'Destroy', localisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create new localisation", new_localisation_path %>
